<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadpedidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context="salesforce.prototipo.com.salesforce.Activities.CadPedidosActivity">

    <ImageView
        android:id="@+id/btnPedReal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCliPed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shopping_cart_48"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnLimparPed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/btnCadProdutos"
        android:layout_toRightOf="@+id/btnCadProdutos"
        android:text="Limpar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnConcluirPed"
        app:layout_constraintTop_toBottomOf="@+id/listViewItemPed" />

    <EditText
        android:id="@+id/edtCodCli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewCliPed"
        android:editable="false"
        android:hint="Código"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/edtRazSocCliPed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCliPed" />

    <EditText
        android:id="@+id/edtRazSocCliPed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtCodCli"
        android:layout_alignBottom="@+id/edtCodCli"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_toRightOf="@+id/edtCodCli"
        android:editable="false"
        android:hint="Nome ou Razão Social"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscaCli"
        app:layout_constraintStart_toEndOf="@+id/edtCodCli"
        app:layout_constraintTop_toTopOf="@+id/edtCodCli" />

    <EditText
        android:id="@+id/edtCondPag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCadProdutos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:editable="false"
        android:hint="Código"
        app:layout_constraintBottom_toTopOf="@+id/btnCadProdutos"
        app:layout_constraintEnd_toStartOf="@+id/edtDescPag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/edtDescTab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtCodTabPreco"
        android:layout_alignBottom="@+id/edtCodTabPreco"
        android:layout_alignLeft="@+id/btnConcluirPed"
        android:layout_alignStart="@+id/btnConcluirPed"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:editable="false"
        android:hint="Tabela"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscaTabPreco"
        app:layout_constraintStart_toEndOf="@+id/edtCodTabPreco"
        app:layout_constraintTop_toTopOf="@+id/edtCodTabPreco" />

    <ImageView
        android:id="@+id/btnBuscaTabPreco"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/edtDescTab"
        android:layout_alignTop="@+id/edtDescTab"
        android:layout_marginEnd="48dp"
        android:layout_toEndOf="@+id/edtDescTab"
        android:layout_toRightOf="@+id/edtDescTab"
        app:layout_constraintBottom_toBottomOf="@+id/edtCodTabPreco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtDescTab"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/zoom_32" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCliPed"
        android:layout_alignStart="@+id/textViewCliPed"
        android:layout_below="@+id/edtCodCli"
        android:layout_marginStart="2dp"
        android:text="Tabela de Preço"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/edtCodTabPreco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCodCli" />

    <EditText
        android:id="@+id/edtCodTabPreco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:editable="false"
        android:hint="Código"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/edtDescTab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/edtDescTab"
        android:layout_marginStart="2dp"
        android:text="Condição de Pagamento"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/edtCondPag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCodTabPreco" />

    <EditText
        android:id="@+id/edtDescPag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtDescTab"
        android:layout_alignRight="@+id/edtDescTab"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/edtCondPag"
        android:editable="false"
        android:hint="Condição"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/TextViewValTot"
        app:layout_constraintEnd_toStartOf="@+id/btnBuscaCondPag"
        app:layout_constraintStart_toEndOf="@+id/edtCondPag"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <ImageView
        android:id="@+id/btnBuscaCondPag"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/TextViewValTot"
        android:layout_alignTop="@+id/edtDescPag"
        android:layout_marginEnd="48dp"
        android:layout_toEndOf="@+id/edtDescPag"
        android:layout_toRightOf="@+id/edtDescPag"
        app:layout_constraintBottom_toTopOf="@+id/TextViewValTot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtDescPag"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/zoom_32" />

    <TextView
        android:id="@+id/textViewCliPed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnPedReal"
        android:layout_marginStart="2dp"
        android:layout_marginTop="52dp"
        android:layout_toLeftOf="@+id/edtRazSocCliPed"
        android:layout_toStartOf="@+id/edtRazSocCliPed"
        android:text="Cliente"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/edtCodCli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextViewFilial"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_above="@+id/textViewCliPed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="7dp"
        android:text="@string/texto_pedidos"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCliPed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnBuscaCli"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/edtRazSocCliPed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/edtRazSocCliPed"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtCodCli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtRazSocCliPed"
        app:layout_constraintTop_toTopOf="@+id/edtCodCli"
        app:srcCompat="@drawable/zoom_32" />

    <TextView
        android:id="@+id/TextViewValTot"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edtDescPag"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:paddingTop="5dp"
        android:text="R$ 0,00"
        android:textAlignment="center"
        android:textColor="?android:attr/statusBarColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/listViewItemPed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/edtDescPag" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/btnCadProdutos"
        android:layout_below="@+id/edtDescPag"
        android:layout_toEndOf="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:paddingTop="5dp"
        android:text="Total:"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listViewItemPed"
        app:layout_constraintEnd_toStartOf="@+id/TextViewValTot"
        app:layout_constraintStart_toEndOf="@+id/btnCadProdutos"
        app:layout_constraintTop_toBottomOf="@+id/edtDescPag" />

    <Button
        android:id="@+id/btnConcluirPed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/btnPedReal"
        android:layout_toRightOf="@+id/btnPedReal"
        android:text="Concluir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLimparPed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewItemPed" />

    <ImageView
        android:id="@+id/btnCadProdutos"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtDescPag"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/listViewItemPed"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCondPag"
        app:srcCompat="@drawable/product_add_32" />

    <ListView
        android:id="@+id/listViewItemPed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/btnLimparPed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextViewValTot"
        android:background="#ffef92"
        app:layout_constraintBottom_toTopOf="@+id/btnLimparPed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewValTot" />

</android.support.constraint.ConstraintLayout>
